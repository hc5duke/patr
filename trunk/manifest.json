{
	"name": "Patr - Pats Flickr App",
	"version": "0.2.2",
	"description": "Pats Flickr App - Improve your Flickr experience! Including a Lightbox, All Sizes, Flic.kr links, buddy icon reply, and more!",
	"icons": { "48": "logo48.png",
			"128": "logo128.png" },
	"background_page": "background.html",
    "options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["http://www.flickr.com/*"],
			"js": ["flickrpage.js", "flickrdiscuss.js", "lightbox.js", "patr.js"],
			"css": ["flickrdiscuss.css", "lightbox.css"],
            "run_at": "document_start"
		}

	],
	"permissions": [
		"tabs",
		"http://api.flickr.com/*",
        "http://www.flickr.com/*"
	]
}
