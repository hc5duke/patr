// manifest.json

{
	"name": "Patr",
	"version": "0.1.2",
	"description": "Pats Flickr App",
	"icons": { "48": "logo48.png",
			"128": "logo128.png" },
	"background_page": "background.html",
	"content_scripts": [
		{
			"matches": ["http://www.flickr.com/*"],
			"js": ["flickrpage.js", "lightbox.js", "patr.js"],
			"css": ["lightbox.css", "flickrpage.css"]
		}

	],
	"permissions": [
		"tabs",
		"http://api.flickr.com/*"
	]
}
